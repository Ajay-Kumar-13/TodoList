<%- include('header') -%>

    <div class="box">
        
        <h1 class="heading"><%= kindOfDay %></h1>

        <div class="list">
            
            
            <% listItems.forEach(function(singleitem) { %>
                <form action="/delete" method="POST">
                    <div class="lst">
                        <input type="checkbox"  onChange="this.form.submit()" name = "checkbox" value=<%=singleitem._id%>>
                        <p class="item"><%= singleitem.name %></p>
                    </div>
                    <input type="hidden" name="listname" value=<%= kindOfDay %>>
                </form>
            <% }) %>
        

            <form class="form" action="/" method="POST">
                <input type="text" name="newItem" autocomplete="off"  placeholder="New Item">
                <button type="submit" name="value" value= <%= kindOfDay %>>+</button>
                
            </form>

            
           
        </div>


    </div>

    
<%- include('footer') -%>